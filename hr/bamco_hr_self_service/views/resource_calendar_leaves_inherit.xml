<odoo>
    <data>
        <record id="view_resource_calendar_leaves_inherit" model="ir.ui.view">
            <field name="name">view_resource_calendar_leaves_inherit</field>
            <field name="model">resource.calendar.leaves</field>
            <field name="inherit_id" ref="resource.resource_calendar_leave_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='leave_details']" position="after">
                    <group>
                        <field name="mission_id"/>
                        <field name="excuse_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>